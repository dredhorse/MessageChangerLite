    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <show>package</show>
                    <nohelp>true</nohelp>
                    <noqualifier>all</noqualifier>
                    <debug>true</debug>
                    <tags>
                        <tag>
                            <name>todo</name>
                            <placement>a</placement>
