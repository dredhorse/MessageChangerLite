                        </tag>
                    </tags>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.soebes.maven.plugins.dmg</groupId>
                <artifactId>doxygen-maven-plugin</artifactId>
                <version>1.0.1</version>
                <configuration>
                    <callGraph>true</callGraph>
                    <callerGraph>true</callerGraph>
                    <executable>C:\Program Files\doxygen\bin\doxygen.exe</executable>
                    <extractAll>true</extractAll>
                    <extractPrivate>true</extractPrivate>
                    <extractStatic>true</extractStatic>
                    <haveDot>false</haveDot>
                    <optimizeOutputJava>true</optimizeOutputJava>
                    <input>${basedir}/target/generated-sources/java</input>
                    <outputDirectory>${project.reporting.outputDirectory}</outputDirectory>
                    <projectName>${project.name}</projectName>
                    <projectNumber>${project.version}</projectNumber>
                    <recursive>true</recursive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-changelog-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <headingDateFormat>dd MMM, yyyy</headingDateFormat>
                    <displayFileDetailUrl>${project.scm.url}/blob/master/%FILE%</displayFileDetailUrl>
                    <dates>
                        <date implementation="java.lang.String">2012-07-07</date>
                    </dates>
                </configuration>
            </plugin>
        </plugins>

    </reporting>

    <distributionManagement>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>googlecode</id>
            <url>svn:https://don-redhorse-repo.googlecode.com/svn/trunk/</url>
        </repository>
        <site>
            <id>github-project-site</id>
            <url>gitsite:git@github.com:dredhorse/MessageChanger.git</url>
        </site>
    </distributionManagement>

    <packaging>jar</packaging>
    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/dredhorse/MessageChanger/issues</url>
    </issueManagement>
    <scm>
        <connection>scm:git:git://github.com/dredhorse/MessageChanger.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/dredhorse/MessageChanger.git</developerConnection>
        <url>https://github.com/dredhorse/MessageChanger</url>
    </scm>

    <repositories>
        <repository>
            <id>spout-repo</id>
            <url>http://repo.spout.org/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>autoincrement-versions-maven-plugin</id>
            <name>autoincrement-versions-maven-plugin</name>
            <url>http://autoincrement-versions-maven-plugin.googlecode.com/svn/repo</url>
            <snapshots>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
